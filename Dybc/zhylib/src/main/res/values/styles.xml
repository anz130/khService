<?xml version="1.0" encoding="utf-8"?>
<resources>
    -->
    <style name="AppBaseTheme" parent="android:style/Theme.Holo.Light.NoActionBar">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
    </style>

    <style name="TransparentActivityTheme" parent="TopDownAnimActivityTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="TopDownAnimActivityTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/TopDownAnimActivity</item>
    </style>
    <style name="LeftAnimActivityTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/LeftAnimActivity</item>
    </style>
    <style name="RightAnimActivityTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/RightAnimActivity</item>
    </style>

    <style name="RightAnimActivity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_right</item>
    </style>

    <style name="LeftAnimActivity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_left</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_to_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_left</item>
    </style>

    <style name="TopDownAnimActivity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_to_top</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_from_top</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_bottom</item>
    </style>


</resources>