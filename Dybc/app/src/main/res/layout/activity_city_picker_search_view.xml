<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/text_36"
    android:layout_marginBottom="@dimen/text_8"
    android:layout_marginLeft="@dimen/text_16"
    android:layout_marginRight="@dimen/text_16"
    android:layout_marginTop="@dimen/text_8"
    android:gravity="center_vertical"
    android:background="@drawable/cp_search_box_bg">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/text_8"
        android:paddingRight="@dimen/text_8"
        android:src="@mipmap/search"
        android:scaleType="center"
        tools:ignore="ContentDescription" />

    <EditText
        android:id="@+id/et_search"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="@string/cp_hint_search_box"
        android:textColorHint="@color/cp_gray"
        android:inputType="text"
        android:singleLine="true"
        android:textColor="@color/cp_gray"
        android:textSize="@dimen/text_14"
        tools:ignore="RtlHardcoded" />

    <ImageView
        android:id="@+id/iv_search_clear"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/text_8"
        android:paddingRight="@dimen/text_8"
        android:src="@mipmap/cp_ic_search_clear"
        android:visibility="gone"
        tools:ignore="ContentDescription" />
</LinearLayout>