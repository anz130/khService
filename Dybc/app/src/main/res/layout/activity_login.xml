<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_60"
            android:layout_marginTop="@dimen/text_60"
            android:src="@mipmap/ic_launcher" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_25"
                android:layout_marginRight="@dimen/text_25"
                android:layout_marginTop="@dimen/text_30"
                android:background="@color/white"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/login_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_login_edittext"
                    android:digits="@string/number_english"
                    android:hint="请输入账号"
                    android:maxLength="18"
                    android:paddingBottom="@dimen/text_10"
                    android:paddingTop="@dimen/text_10"
                    android:selectAllOnFocus="false"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textColorHint="@color/graygray"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:textSelectHandle="@mipmap/edit_handle_move"
                    android:textSelectHandleLeft="@mipmap/edit_handle_left"
                    android:textSelectHandleRight="@mipmap/edit_handle_right"
                    android:textSize="@dimen/text_15" />

                <ImageView
                    android:id="@+id/loginUserDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:src="@mipmap/delete"
                    android:visibility="invisible" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_25"
                android:layout_marginRight="@dimen/text_25"
                android:layout_marginTop="@dimen/text_20"
                android:background="@color/white"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/login_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_login_edittext"
                    android:digits="@string/number_english"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:maxLength="18"
                    android:paddingBottom="@dimen/text_10"
                    android:paddingTop="@dimen/text_10"
                    android:selectAllOnFocus="false"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textColorHint="@color/graygray"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:textSelectHandle="@mipmap/edit_handle_move"
                    android:textSelectHandleLeft="@mipmap/edit_handle_left"
                    android:textSelectHandleRight="@mipmap/edit_handle_right"
                    android:textSize="@dimen/text_15" />

                <ImageView
                    android:id="@+id/loginPassDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:src="@mipmap/delete"
                    android:visibility="invisible" />

            </FrameLayout>

            <TextView
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_20"
                android:layout_marginRight="@dimen/text_20"
                android:layout_marginTop="@dimen/text_40"
                android:background="@drawable/bg_blue_round"
                android:gravity="center"
                android:paddingBottom="@dimen/text_15"
                android:paddingTop="@dimen/text_15"
                android:text="登 录"
                android:textColor="@color/white"
                android:textSize="@dimen/text_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/text_20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/regist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/text_15"
                android:paddingLeft="@dimen/text_15"
                android:paddingRight="@dimen/text_15"
                android:paddingTop="@dimen/text_15"
                android:text="新用户注册"
                android:textColor="@color/graygray"
                android:textSize="@dimen/text_15" />

            <TextView
                android:id="@+id/forgetPass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/text_15"
                android:paddingLeft="@dimen/text_15"
                android:paddingRight="@dimen/text_15"
                android:paddingTop="@dimen/text_15"
                android:text="忘记密码"
                android:textColor="@color/graygray"
                android:textSize="@dimen/text_15" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
