<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/tv_item_result_listview_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/text_48"
        android:layout_marginLeft="@dimen/text_16"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_16"
        android:textColor="@color/cp_gray_deep"
        tools:ignore="RtlHardcoded" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cp_divider"
        android:layout_marginLeft="@dimen/text_16"
        android:layout_marginRight="@dimen/text_16"/>
</LinearLayout>